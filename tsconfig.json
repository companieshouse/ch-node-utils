{
   "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "strict": true,
     "outDir": "./lib",
     "declaration": true,
     "moduleResolution": "node",
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "sourceMap": true,
     "removeComments": true,
     "esModuleInterop": true,
     "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
     "typeRoots": [
            "src/index.ts",
            "src/global.d.ts",
            "node_modules/@types"
        ]
   },
   "include": [
        "./src",
        "src/index.ts",
        "templates/**/*"
    ],
   "exclude": ["node_modules"]
 }








